<div>
  <h4>Comment by <%= comment.author_name %></h4>
  <p class = "comment"><%= comment.body %></p>
  <br>
  <p>Posted <%= distance_of_time_in_words(comment.article.created_at, comment.created_at) %> later</p>
  <br>
  <% if logged_in? %>
  <%= link_to "Delete Comment", article_comment_path(@article, comment), method: :delete, data: {confirm: "Are you sure you want to delete this comment?"} %>
  <% end %>
  <br>
</div>
