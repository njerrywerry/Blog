<h1>All Articles</h1>

<ul id = "articles">
  <% @articles.each do |article| %>
    <li>
     <%= link_to article.title, article_path(article), class: 'article_title' %>
    </li>
  <% end %>
</ul>
<% if logged_in? %>
<%= link_to "Create New Article", new_article_path, class: 'new_article' %>
<% end %>
<br>
<%= link_to "Tags", tags_path %>
<br>
<% if logged_in? %>
<%= link_to "Authors", authors_path %>
<% end %>
